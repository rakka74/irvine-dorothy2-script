function(){

	var cookie = '';

	common_load('download','test_download');
	var url=new URL(urlinfo.url);
	var http=download(url.url,false,{'Cookie':cookie});
	if(http.responseHeader.code!=200){
		return retry('error--->'+http.responseHeader.code);
	}

	var cookie=http.responseHeader.cookie.data;

	common_load ('additem');

	var ini = {
		Mode: 'Auto',
//		Queue: '/Default',
		Listname: '',
		Workaround: false
	};
	var additem = new AddItem (ini);

	var result = http.data.match('<!--mainEntryBase-->(.+?)<!--/mainEntryBase-->');
	result = result.toString().match('<a[^<]+?>[^>]*?<img[^<]+?>[^>]*?</a>', 'g');

	var num = 1;
	for(value in result) {
		println(result[value]);

		result[value].match(/href="(.+?)"/);
		var imgSrc = RegExp.$1;
		println('imgSrc=' + imgSrc);

		imgSrc.match('.+/(.+?)$');
		var filename = RegExp.$1;
		println('filename=' + filename);

		var list = [
			{ Url: imgSrc, Filename: num + '_' + filename }
		];
		additem.send (list);

		++num;
	}

	exit();
}
